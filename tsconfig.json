{
  "compilerOptions": {
    "target": "ES2018",
    "moduleResolution": "Node",
    "declaration": true,
    "declarationDir": "./dist/types",
    "rootDir": "./src",
    "outDir": "./dist",
    "strict": true,
    "esModuleInterop": true,
    "forceConsistentCasingInFileNames": true,
    "skipLibCheck": true
  },
  "include": ["src"]
}
